<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_view_chapter_list_item"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp" >

        <ImageView
            android:id="@+id/item_chapter_list_ruond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_book_chapter_now" />

        <TextView
            android:id="@+id/item_chapter_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/item_chapter_list_ruond"
            android:text="1."
            android:textColor="@color/book_default_red"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_chapter_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_chapter_list_num"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/book_default_red"
            android:textSize="16dp" />
    </RelativeLayout>

</RelativeLayout>