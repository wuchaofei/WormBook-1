                android:gravity="center"
                android:text=""
                android:textColor="@color/text_ef_gray"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_choose_layout4"
            android:layout_width="fill_parent"
