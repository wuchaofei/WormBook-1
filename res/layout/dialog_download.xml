<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/ac_share_trans_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lay_share_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bg_default_pop"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/dialog_choose_tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_dialog_choose_item"
                    android:gravity="center"
                    android:text="后100章"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/dialog_choose_divider" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/dialog_choose_tv2"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_dialog_choose_item"
                    android:gravity="center"
                    android:text="后面全部"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/dialog_choose_divider" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/dialog_choose_tv3"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_dialog_choose_item"
                    android:gravity="center"
                    android:text="全本"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/share_dis"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_btn_share_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/userinfo_line"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_touch"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/layout_share"
        android:background="@color/ac_share_trans_bg" />

</RelativeLayout>