<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_update"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="提示"
                android:textColor="@color/dialog_update_title"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/update_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_update_info"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="版本"
                    android:textColor="@color/dialog_update_content"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/update_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_update_info"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="大小"
                    android:textColor="@color/dialog_update_content"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="更新内容"
                android:textColor="@color/dialog_update_content"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/update_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.2"
                android:text="更新内容"
                android:textColor="@color/dialog_update_content"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="30dp"
                android:background="@color/dialog_update_divider" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp" >

                <LinearLayout
                    android:id="@+id/update_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:id="@+id/update_delay"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_dialog"
                        android:gravity="center"
                        android:text="稍后升级"
                        android:textColor="@color/dialog_update_content"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/update_now"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_dialog"
                        android:gravity="center"
                        android:text="现在升级"
                        android:textColor="@color/dialog_update_now"
                        android:textSize="16dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/update_divider"
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/dialog_update_divider" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>