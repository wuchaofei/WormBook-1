<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_view_chapter_list_item"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/item_chapter_list_mark_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/book_default_red"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/item_chapter_list_mark_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/book_default_red"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/item_chapter_list_mark_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_chapter_list_mark_chapter"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="left"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/book_default_red"
            android:textSize="16dp" />
    </RelativeLayout>

</RelativeLayout>