<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/ac_share_trans_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lay_share_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bg_default_pop"
            android:orientation="vertical"
            android:paddingBottom="15dp" >

            <TextView
                style="@style/invite_text1"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="分享到" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/lay_weixin"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_invite_item"
                        android:orientation="vertical" >

                        <ImageView
                            style="@style/invite_iv"
                            android:background="@drawable/icon_weixin2" />

                        <TextView
                            style="@style/invite_text1"
                            android:text="微信" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_weixinfri"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_invite_item"
                        android:orientation="vertical" >

                        <ImageView
                            style="@style/invite_iv"
                            android:background="@drawable/icon_friend_cricle2" />

                        <TextView
                            style="@style/invite_text1"
                            android:text="朋友圈" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_zone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_invite_item"
                        android:orientation="vertical" >

                        <ImageView
                            style="@style/invite_iv"
                            android:background="@drawable/icon_zone" />

                        <TextView
                            style="@style/invite_text1"
                            android:text="QQ空间" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_qq"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_invite_item"
                        android:orientation="vertical" >

                        <ImageView
                            style="@style/invite_iv"
                            android:background="@drawable/icon_qq2" />

                        <TextView
                            style="@style/invite_text1"
                            android:text="QQ" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_sina"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_invite_item"
                        android:orientation="vertical" >

                        <ImageView
                            style="@style/invite_iv"
                            android:background="@drawable/icon_sina2" />

                        <TextView
                            style="@style/invite_text1"
                            android:text="新浪微博" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/share_dis"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_btn_share_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/userinfo_line"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_touch"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/layout_share"
        android:background="@color/ac_share_trans_bg" />

</RelativeLayout>