<resources>

    <style name="LunchTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/luanch</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ReadView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:lineSpacingExtra">3dip</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_com_bar</item>
    </style>

    <style name="ActionBarLayout_inner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ActionBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/selector_btn_actionbar</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="ActionBarIconText" parent="@style/ActionBarIcon">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:drawablePadding">22dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BookSearchItemBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textScaleX">1.1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BookSearchItemLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StyledIndicators">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:windowBackground">@drawable/black</item>
    </style>

    <style name="CustomTabPageIndicator">
        <item name="android:background">@drawable/selector_indicator_tab</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/indicator_tab_title_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BookDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light_black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BookShelfMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textColor">@color/book_shelf_menu_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BookShelfMenuDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/icon_book_shelf_menu_divider</item>
    </style>

    <style name="BookShelfMenuLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_btn_book_self_menu</item>
    </style>

    <style name="invite_text1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="invite_iv">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="book_type_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/selector_book_shelf_item</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="book_type_layout_ef">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/selector_book_shelf_item_ef</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="book_type_text_ef">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/text_ef_light_gray</item>
        <item name="android:textSize">15dp</item>
        <!-- <item name="android:id">@+id/book_type_text</item> -->
    </style>

    <style name="book_type_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/text_light_black</item>
        <item name="android:textSize">15dp</item>
        <!-- <item name="android:id">@+id/book_type_text</item> -->
    </style>

    <style name="book_type_line_right">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@color/book_shelf_item_divider</item>
    </style>

    <style name="book_type_line_buttom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/book_shelf_item_divider</item>
    </style>

    <style name="book_type_line_right_ef">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@color/color_ef_divider</item>
    </style>

    <style name="book_type_line_buttom_ef">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/color_ef_divider</item>
    </style>

    <style name="menu_auto_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_color_pciker_view_portrait">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>